<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_eff1f4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/channel_setting_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView android:id="@+id/channel_setting_title_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/color_333333"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/dimen_20_dp"
            android:gravity="center_vertical"
            android:text="@string/qchat_close"/>

        <TextView android:id="@+id/channel_setting_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:text="@string/qchat_channel_setting_title"/>

        <TextView android:id="@+id/channel_setting_title_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/color_337eff"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dimen_20_dp"
            android:gravity="center_vertical"
            android:text="@string/qchat_save"/>

    </androidx.constraintlayout.widget.ConstraintLayout >

    <!-- channel name-->
    <TextView android:id="@+id/channel_setting_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="@dimen/dimen_8_dp"
        android:layout_marginStart="@dimen/dimen_32_dp"
        android:textColor="@color/color_666666"
        android:text="@string/qchat_channel_channel_name"/>

    <com.netease.yunxin.kit.common.ui.widgets.ClearableEditText
        android:id="@+id/channel_setting_name_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dp"
        android:background="@color/color_white"
        android:layout_marginStart="@dimen/dimen_20_dp"
        android:layout_marginEnd="@dimen/dimen_20_dp"
        android:textColor="@color/color_333333"
        android:layout_marginTop="@dimen/dimen_8_dp"
        app:corner_radius="@dimen/dimen_8_dp"
        android:maxEms="50"
        tools:ignore="MissingConstraints" />

    <!-- channel topic-->
    <TextView android:id="@+id/channel_setting_topic_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="@dimen/dimen_16_dp"
        android:layout_marginStart="@dimen/dimen_32_dp"
        android:textColor="@color/color_666666"
        android:text="@string/qchat_channel_topic"/>

    <com.netease.yunxin.kit.common.ui.widgets.ClearableEditText
        android:id="@+id/channel_setting_topic_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dp"
        android:background="@color/color_white"
        android:layout_marginStart="@dimen/dimen_20_dp"
        android:layout_marginEnd="@dimen/dimen_20_dp"
        android:layout_marginTop="@dimen/dimen_8_dp"
        android:textColor="@color/color_333333"
        app:corner_radius="@dimen/dimen_8_dp"
        android:maxEms="64"
        android:lines="1"
        tools:ignore="MissingConstraints" />

    <TextView android:id="@+id/channel_setting_permission_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="@dimen/dimen_16_dp"
        android:layout_marginStart="@dimen/dimen_32_dp"
        android:textColor="@color/color_666666"
        android:text="@string/qchat_channel_permission_title"/>

    <com.netease.yunxin.kit.common.ui.widgets.RoundTextView
        android:id="@+id/channel_setting_permission_rtv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dp"
        android:background="@color/color_white"
        android:layout_marginStart="@dimen/dimen_20_dp"
        android:layout_marginEnd="@dimen/dimen_20_dp"
        android:layout_marginTop="@dimen/dimen_8_dp"
        app:corner_radius="@dimen/dimen_8_dp"
        android:drawableEnd="@drawable/ic_right_arrow"
        android:paddingEnd="@dimen/dimen_16_dp"
        android:paddingStart="@dimen/dimen_12_dp"
        android:textColor="@color/color_333333"
        android:text="@string/qchat_channel_permission_setting"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints" />

    <!-- white name list -->
    <TextView android:id="@+id/channel_setting_name_list_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="@dimen/dimen_16_dp"
        android:layout_marginStart="@dimen/dimen_32_dp"
        android:textColor="@color/color_666666"
        android:text="@string/qchat_channel_names_list"/>

    <com.netease.yunxin.kit.common.ui.widgets.RoundTextView
        android:id="@+id/channel_setting_white_name_list_rtv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dp"
        android:background="@color/color_white"
        android:layout_marginStart="@dimen/dimen_20_dp"
        android:layout_marginEnd="@dimen/dimen_20_dp"
        app:layout_constraintTop_toBottomOf="@+id/channel_setting_name_list_tv"
        android:layout_marginTop="@dimen/dimen_8_dp"
        app:corner_radius="@dimen/dimen_8_dp"
        android:drawableEnd="@drawable/ic_right_arrow"
        android:paddingEnd="@dimen/dimen_16_dp"
        android:paddingStart="@dimen/dimen_12_dp"
        android:textColor="@color/color_333333"
        android:text="@string/qchat_channel_white_name_list"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints" />

    <com.netease.yunxin.kit.common.ui.widgets.RoundTextView
        android:id="@+id/channel_setting_delete_rtv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dp"
        android:background="@color/color_white"
        android:layout_marginStart="@dimen/dimen_20_dp"
        android:layout_marginEnd="@dimen/dimen_20_dp"
        android:layout_marginTop="@dimen/dimen_42_dp"
        app:corner_radius="@dimen/dimen_8_dp"
        android:text="@string/qchat_channel_delete"
        android:textColor="@color/color_e6605c"
        android:gravity="center"
        tools:ignore="MissingConstraints" />


</LinearLayout>